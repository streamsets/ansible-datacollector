[Unit]
Description=StreamSets Data Collector (SDC)

[Service]
User={{ sdc_user }}
Group={{ sdc_user }}
LimitNOFILE=32768
Environment=SDC_CONF={{ sdc_conf_dir }}
Environment=SDC_HOME={{ sdc_dist }}
Environment=SDC_LOG={{ sdc_log_dir }}
Environment=SDC_DATA={{ sdc_data_dir }}
ExecStart={{ sdc_dist }}/bin/streamsets dc -verbose
TimeoutSec=60

